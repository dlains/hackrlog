<% @tags = tag_usage(session[:hacker_id]) %>
<div id="tag_manager">
  <table>
    <tr>
      <th id="title" colspan="3">Tags</th>
    </tr>
    <% @tags.each do |tag| %>
    <tr>
      <td><a href="/tags/<%= tag.id %>"><%= tag.name %></a></td>
      <td><em><%= tag.count %></em></td>
      <td class="action"><%= link_to 'X', tag, remote: true, confirm: 'Are you sure you wish to delete this Tag?', method: :delete, title: "Delete Tag: #{tag.name}" %></td>
    </tr>
    <% end %>
  </table>
  <div>
    <%= add_tag_mini_form %>
  </div>
</div>