<%= form_tag do %>
  <fieldset>
    <legend>Login</legend>
      <% if flash[:notice] %>
        <p id="notice"><%= flash[:notice] %></p>
      <% end %>
      <ol>
        <li class="required">
          <%= label_tag 'Email' %>
          <%= email_field_tag :email, params[:email], placeholder: 'Email', autofocus: true %>
        </li>
        <li class="required">
          <%= label_tag 'Password' %>
          <%= password_field_tag :password, params[:password], placeholder: 'Password' %>
        </li>
      </ol>
  </fieldset>
  <%= link_to 'Reset password?', reset_url %>
  <br/>
  <%= submit_tag "Login" %>
<% end %>