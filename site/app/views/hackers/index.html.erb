<h1>Listing hackers</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Time zone</th>
    <th>Enabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hackers.each do |hacker| %>
  <tr>
    <td><%= hacker.email %></td>
    <td><%= hacker.name %></td>
    <td><%= hacker.time_zone %></td>
    <td><%= hacker.enabled %></td>
    <td><%= link_to 'Show', hacker %></td>
    <td><%= link_to 'Edit', edit_hacker_path(hacker) %></td>
    <td><%= link_to 'Destroy', hacker, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

