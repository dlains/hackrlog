                <%= label_tag 'Comments / Suggestions / Requests', nil, class: 'control-label' %>
                <div class="controls">
                  <%= text_area_tag :comments, params[:comments], class: 'span7' %>
                </div>
              </div>
              <div class="form-actions">
                <button type="submit" class="btn btn-primary">Submit Request</button>
              </div>
            </fieldset>
