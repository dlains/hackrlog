// Find the article to be edited and fade it out.
$('#entry_<%= @entry.id %>').slideUp('normal');

// Queue the remove call in the 'fx' queue so the remove call doesn't happen during
// the fadeOut animation.
$('#entry_<%= @entry.id %>').queue('fx',
  function() {
    $(this).remove();
    $(this).dequeue('fx');
  }
);