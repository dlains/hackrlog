<h1>Your Tags</h1>

<table>
<% @tags.each do |tag| %>
  <tr class="<%= cycle('line_odd', 'line_even') %>">
    <td><%= tag.name %></td>
    <td class="actions">
      <%= link_to 'Show', tag %>
      <%= link_to 'Edit', edit_tag_path(tag) %>
      <%= link_to 'Destroy', tag, :data => { :confirm => 'Are you sure?' }, method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_tag_path %>