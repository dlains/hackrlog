<% @tags = get_updated_tag_list %>
<div id="tag_manager">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Filter</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
      <tr>
        <td class="name">
          <span class="tag" title="<%= tag.name %>"><%= tag.name %></span>
        </td>
        <td align="right">
          <div class="onoffswitch">
            <%= tags_check_box_tag 'tag_ids[]', "tag_id_#{tag.id}", tag.id, checked?(tag), class: 'onoffswitch-checkbox' %>
            <label class="onoffswitch-label" for="tag_id_<%= tag.id %>">
              <div class="onoffswitch-inner">
                <div class="onoffswitch-active">On</div>
                <div class="onoffswitch-inactive">Off</div>
              </div>
              <div class="onoffswitch-switch"></div>
            </label>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
